class Solution {
public:
    vector<vector<int>> kClosest(vector<vector<int>>& ar, int k) {
        priority_queue<pair<int, vector<int>>> pq;
        
        for (auto& a : ar) {
            int distance = a[0] * a[0] + a[1] * a[1];
            pq.push({distance, a});
            if (pq.size() > k) pq.pop(); 
        }
        
        vector<vector<int>> ans;
        while (!pq.empty()) {
            ans.push_back(pq.top().second);
            pq.pop();
        }
        return ans;
    }
};
